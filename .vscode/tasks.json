{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "type": "shell",
    "args": [
        "-c"
    ],
    "echoCommand": true,
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake",
            "args": [
                "-G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."
            ]
        },
        {
            "type": "shell",
            "label": "make",
            "command": "${workspaceRoot}/scripts/make.sh",
            "args": [
                "-j",
                "8"
            ],
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "/"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}